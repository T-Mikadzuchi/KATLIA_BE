generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model color {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  color   String
  colorId Int @unique
  hex     String
}

model customer {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique
  totalPurchaseAmount Float @default(0)
}

model customer_address {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  customerId String
  fullname String
  phonenumber String
  address String
  province String
  district String
  ward String
  note String?
  setAsDefault Boolean @default(false)
}

model image {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  colorId   Int
  productId Int
  url       String
}

model storage_import {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  staffName String?
  staffId String
  surcharge Float?
  total Float?
  status Int @default(0)
  date DateTime?
}

model import_detail {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  importId String
  productId Int
  size String
  colorId Int
  quantity Int
  unitPrice Float
}

model order_detail {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  voucherId String?
  customerId String
  shippingFee Float?
  payment PaymentMethod?
  status Int @default(0)
  createdAt DateTime?
  completedAt DateTime?
  address String?
  receiverName String?
  receiverPhone String?
  note String?
  total Float?
}

model order_item {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  orderId String
  currentPrice Float?
  productId Int
  size String
  colorId Int
  quantity Int
  currentSalesPrice Float?
}

enum PaymentMethod {
  COD
  CARD
  PAYPAL
}

model product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  categoryId  Int
  description String?
  discountId  String?
  isDeleted   Int @default(0)
  name        String
  price       Float
  productId   Int @unique 
  sold        Int @default(0)
  defaultPic  String
  colorNumber Int @default(1)
}

model product_category {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  category   String
  categoryId Int @unique
  gender     String
}

model product_detail {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  colorId   Int
  productId Int
  quantity  Int @default(0)
  size      String
}

model product_discount {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  discountName String
  percent Float
  startAt DateTime
  endAt DateTime
}

model staff {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique
  startAt DateTime @default(now())
  status Int @default(1)
}

model user {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
  role Role @default(CUSTOMER)
  gender Gender @default(OTHER)
  fullName String?
  phoneNumber String?
  birthday DateTime?
  accessFailedAccount Boolean @default(false)
  ava String?
  address String?
  province String?
  district String?
  ward String?
  note String?
}

enum Role {
  ADMIN
  CUSTOMER
  SALES
  STORAGE 
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model voucher {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model mail_otp {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String?
  name String?
  otp Int
}

model feedback {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  orderId String
  productId Int
  username String
  photo? String
  rate Int
  comment? String
}
